<h1>Track: <%= @track.name %></h1>

<% if admin_user? %>
  <%= link_to 'edit', edit_track_url(@track) %> |
  <%= link_to 'delete', @track, method: :delete %>
  <br><br>
<% end %>

<table>
  <tr>
    <th>Band:</th>
    <td><%= link_to @track.band.name, band_url(@track.band) %><td>
  </tr>
  <tr>
    <th>Album:</th>
    <td><%= link_to @track.album.name, album_url(@track.album) %><td>
  </tr>
  <tr>
    <th>Type:</th>
    <td><%= @track.track_t %><td>
  </tr>
</table>
<br>
<b>Lyrics</b>
<%= ugly_lyrics(@track.lyrics) %>

<h2>Notes</h2>
<%= render @track.notes %>
<br>
<%= render 'notes/form', note: @note %>
